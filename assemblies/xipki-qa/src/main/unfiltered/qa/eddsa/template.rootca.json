{
	"basedir":"APP_DIR",
	"properties":{
		"ca.signerConf":"REPLACEME-CA_SIGNERCONF",
		"keycerts.dir":"xipki/keycerts",
		"output.dir":"output",
		"profiles.dir":"qa/certprofile",
		"token.type":"REPLACEME-TOKEN_TYPE"
	},
	"signers":[{
		"name":"responder1",
		"type":"pkcs12",
		"conf":{
			"value":"password=CHANGEIT,keystore=file:${keycerts.dir}/ca-server.p12,algo=SHA256withECDSA"
		}
	}],
	"requestors":[{
		"name":"requestor1",
		"type":"cert",
		"binaryConf":{
			"file":"${keycerts.dir}/ra-sdk-client-cert.pem"
		}
	}],
	"publishers":[{
		"name":"ocsp-publisher",
		"type":"ocsp",
		"conf":{
			"value":"datasource=ocsp,publish.goodcerts=true"
		}
	}],
	"profiles":[{
		"name":"ed25519",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-ed25519.json"
		}
	},{
		"name":"ed448",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-ed448.json"
		}
	},{
		"name":"x25519",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-x25519.json"
		}
	},{
		"name":"x448",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-x448.json"
		}
	},{
		"name":"rootca",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-rootca.json"
		}
	},{
		"name":"subca",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-subca.json"
		}
	},{
		"name":"ocsp",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-ocsp.json"
		}
	}],
	"cas":[{
		"name":"rootca1",
		"aliases":[
			"rootca"
		],
		"caInfo":{
			"caUris":{
				"cacertUris":[
					"http://myorg.org/rootca1.der"
				],
				"crlUris":[
					"http://localhost:8081/crl/?type=crl&name=rootca1"
				],
				"ocspUris":[
					"http://localhost:8080/ocsp/responder1"
				]
			},
			"keypairGenNames":["software"],
			"expirationPeriod":365,
			"genSelfIssued":{
				"subject":"REPLACEME-SUBJECT",
				"profile":"rootca",
				"serialNumber":"1"
			},
			"keepExpiredCertDays":-1,
			"maxValidity":"10y",
			"nextCrlNo":2,
			"permissions":["all"],
			"saveCert":true,
			"saveKeypair":false,
			"signerType":"${token.type}",
			"signerConf":{
				"value":"${ca.signerConf}"
			},
			"snSize":20,
			"status":"active",
			"validityMode":"cutoff"
		},
		"profiles":[
			"subca"
		],
		"publishers":[
			"ocsp-publisher"
		],
		"requestors":[{
			"requestorName":"requestor1",
			"permissions":[
				"all"
			],
			"profiles":[
				"all"
			]
		}]
	}]
}

