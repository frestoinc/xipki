{
	"basedir":"APP_DIR",
	"properties":{
		"profiles.dir":"xipki/ca-setup/certprofile"
	},
	"signers":[],
	"keypairGens":[],
	"requestors":[{
		"name":"requestor1",
		"type":"cert",
		"binaryConf":{
			"file":"xipki/keycerts/ra-sdk-client-cert.pem"
		}
	}],
	"publishers":[
	    /*
		{
			"name":"ocsp-publisher",
			"type":"ocsp",
			"conf":{
				"value":"datasource=ocsp,publish.goodcerts=true"
			}
		}
		*/
	],
	"profiles":[{
		"name":"scep",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-scep.json"
		}
	},{
		"name":"ocsp",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-ocsp.json"
		}
	},{
		"name":"smime",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-smime.json"
		}
	},{
		"name":"tls",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-tls.json"
		}
	},{
		"name":"tls-c",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-tls-c.json"
		}
	},{
		"name":"tls-sm2",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-tls-sm2.json"
		}
	},{
		"name":"tls-sm2-enc",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-tls-sm2-enc.json"
		}
	}],
	"cas":[{
		"name":"$[ca.name]",
		"aliases":["$[ca.alias]"],
		"caInfo":{
			"caUris":{
				"crlUris":[
					"http://ca.myorg.org/crl/$[ca.name]"
				],
				"ocspUris":[
					"http://localhost:8080/ocsp/"
				]
			},
			"keypairGenNames": ["software"],
			"crlControl":{
				"interval.hours": 24,
				"fullcrl.intervals":7,
				"overlap":"3d",
				"interval.time":"02:00"
			},
			"expirationPeriod":365,
			"cert":{
				"file":"xipki/ca-setup/keycerts/$[ca.name].pem"
			},
			"certchain":[],
			"keepExpiredCertDays":-1,
			"maxValidity":"10y",
			"nextCrlNo":2,
			"permissions":["all"],
			"saveCert":true,
			"saveKeypair":false,
			"signerType":"REPLACEME-TOKEN_TYPE",
			"signerConf":{
				"value":"REPLACEME-CA_SIGNERCONF"
			},
			"snSize":20,
			"status":"active",
			"validityMode":"cutoff"
		},
		"profiles":["ocsp", "scep", "smime", "tls", "tls-c", "tls-sm2", "tls-sm2-enc"],
		"publishers":[
			// "ocsp-publisher"
		],
		"requestors":[{
			"requestorName":"requestor1",
			"permissions":["all"],
			"profiles":["all"]
		}]
	}]
}

